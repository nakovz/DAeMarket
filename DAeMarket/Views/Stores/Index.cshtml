@model IEnumerable<DAeMarket.ViewModels.UsersViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="alert alert-warning">
    <h2 class="alert-heading text-center">Wellcome!</h2>


    <h4 class="text-center">Please choose Your favorite store</h4>

    <table class="table table-hover modal-dialog" style="margin:0px;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Slogan</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model) {
                <tr>

                    <td>@Html.ActionLink(m.Store.Name, "LogIn", "Stores", new { id = m.Store.Id }, null)</td>
                    <td>@m.Store.Slogan</td>

                </tr>
            }
        </tbody>

    </table>
</div>
<div style="width: fit-content; margin: auto;" >
    <button onclick="location.href='@Url.Action("Configure","Stores")'">Configure DAeMarket </button>
</div>
