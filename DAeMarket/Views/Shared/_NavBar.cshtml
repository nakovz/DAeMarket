@model IEnumerable<DAeMarket.ViewModels.UsersViewModel>

@{ 
    ViewBag.Title = "Zoki";
}
<div class="navbar navbar-fixed-top bg-success m-xxl-5">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar">&#8801;</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("DAeMarket", "Index", "Stores", new { area = "" }, new { @class = "navbar-brand" })
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a class="dropdown-toggle nav-link" data-bs-toggle="dropdown" type="button" id="dropdownMenuButton" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        Stores &#9660;
                    </a>
                    <div class="dropdown-menu" style="width:200px; text-align:center;" aria-labelledby="dropdownMenuButton">
                        @foreach (var m in Model) {
                            @Html.ActionLink(m.Store.Name, "LogIn", "Stores", new { id = m.Store.Id }, new { @class = "dropdown-item" })
                            <br />
                        }
                    </div>
                <li>@Html.ActionLink("Configure DAeMarket", "Configure", "Stores")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>
</div>

